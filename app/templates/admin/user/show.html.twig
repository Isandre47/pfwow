{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-10 offset-1">
            <h1>User</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roleName }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ user.pseudo }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('user_index') }}">revenir à la liste</a>
            <br>
            <a href="{{ path('user_edit', {'id': user.id}) }}">éditer</a>

            {{ include('admin/user/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
